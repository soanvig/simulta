{
  "name": "@koteya/simulta",
  "license": "LGPLv3",
  "description": "Run multiple commands simultanously",
  "exports": "./src/simulta.ts",
  "version": "0.2.0",
  "tasks": {
    "test:simple": "deno run --allow-env --allow-run ./src/simulta.ts \"cat test/a.txt\" \"cat test/b.txt\"",
    "test:sleep": "deno run --allow-env --allow-run ./src/simulta.ts \"sh test/scriptA.sh\" \"sh test/scriptB.sh\""
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "src/**/*.ts"
    ]
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@1.0.21",
    "@std/streams": "jsr:@std/streams@1.0.10",
    "@std/expect": "jsr:@std/expect"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true
  }
}
